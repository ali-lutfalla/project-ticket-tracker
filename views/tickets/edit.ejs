<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editing a ticket</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <form action="/users/<%= user._id %>/projects/<%= project._id %>/tickets/<%= ticket._id %>?_method=PUT" method="POST">
        <label for="description">description:</label>
        <textarea name="description" id="description" value="<%= ticket.description %>"></textarea>

        <label for="priority">priority:</label>
        <select name="priority" id="priority">
            <% priorityOptions.forEach((priority) => { %>
                <option value="<%= priority %>"
                    <%= ticket.priority === priority ? 'selected' : '' %> >
                <%= priority %>
                </option>
            <% }) %>
        </select>

        <label for="status">status:</label>
        <select name="status" id="status">
            <% statusOptions.forEach((status) => { %>
                <option value="<%= status %>"
                    <%= ticket.status === status ? 'selected' : '' %> >
                <%= status %>
                </option>
            <% }) %>
        </select>

        <button type="submit">Update the ticket</button>
    </form>
</body>
</html>
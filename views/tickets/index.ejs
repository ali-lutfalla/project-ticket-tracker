<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.name %></title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to your project tickets</h1>
    <a href="/users/<%= user._id %>/projects/<%= project._id %>/tickets/new">Add a Ticket</a>

    <ul>
        <% if ( !project.tickets ) { %>
            <p>You don't have any project tickets</p>
        <% } else { %>
            <% project.tickets.forEach((ticket) => { %>
                <li>
                    <a href="/users/<%= user._id %>/projects/<%= project._id %>">
                        <%= project.name %>
                    </a>
                </li>
            <% }) %>
        <% } %>
    </ul>
</body>
</html>